<div class="col-12 col-md-6">
  <div class="row">
    <div class="col-md-auto">
      <h1 class="text-white title inline-block"><%=I18n.t('global.title') %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col button">
      <button type="button" class="btn btn-primary" disabled>
        <%=I18n.t('win_or_lose.button_level')%>
        <span class="badge badge-light">
          <%=game.type%>
        </span>
      </button>
      <button type="button" class="btn btn-primary" disabled>
        <%=I18n.t('win_or_lose.button_attempts_left')%>
        <span class="badge badge-light">
          <%=total_attempts - game.attempts%>/<%=total_attempts%>
        </span>
      </button>
      <button type="button" class="btn btn-primary" disabled>
        <%=I18n.t('win_or_lose.button_hints_left')%>
        <span class="badge badge-light">
          <%=total_hints - game.hints%>/<%=total_hints%>
        </span>
      </button>
    </div>
  </div>
  <hr class="mb-4">
  <div class="row">
    <div class="text-center">
      <div class="text-center">
        <h3 class="text-white">
          <%=I18n.t('win_or_lose.win_message', name: game.user.name)%>
        </h3>
      </div>
      <img src="assets/images/won.gif" class="img-fluid" alt="You won the game!">
    </div>
  </div>
  <hr class="mb-4">
  <a class="btn btn-primary btn-lg" href="/restart" role="button">
    <%=I18n.t('win_or_lose.button_play_again')%>
  </a>
  <a class="btn btn-success btn-lg float-right" href="/statistics" role="button">
    <%=I18n.t('win_or_lose.button_statistics')%>
  </a>
</div>
