<div class="col-12 col-md-6">
  <div class="row">
    <div class="col-md-auto">
      <h1 class="text-white title"></h1>
    </div>
  </div>
  <div class="row">
    <p class="lead text-white-70">
      <%=I18n.t('menu.welcome_menu')%>
    </p>
  </div>
  <hr class="mb-4">
  <form method="post" action="/game">
    <div class="form-group">
      <label for="player_name" class="lead label"><%=I18n.t('menu.label_player_name')%></label>
      <input class="form-control" name="player_name" id="player_name" pattern="^[\w\u0400-\u04ff]{3,20}$" title="Name - string, required, min length - 3 symbols, max length - 20" placeholder="Your name" autofocus="" required="">
    </div>
    <div class="form-group">
      <label for="level" class="lead label"><%=I18n.t('menu.label_level')%></label></label>
      <select class="custom-select" name="level" required="">
        <option value=""><%=I18n.t('menu.option')%></option>
        <% difficulty.each do |lvl, info_lvl| %>
          <option value=<%=lvl %>><%=lvl.upcase %>=> <%=I18n.t('menu.option_attempts')%><%=info_lvl[:attempts] %>, <%=I18n.t('menu.option_hints')%><%=info_lvl[:hints] %></option>
        <% end %>
      </select>
    </div>

    <hr class="mb-4">

    <button type="submit" class="btn btn-primary btn-lg">
      <%=I18n.t('menu.button_submit')%>
    </button>
    <span class="float-right">
      <a class="btn btn-warning btn-lg" href="/rules" role="button"><%=I18n.t('menu.link_rules')%></a>
      <a class="btn btn-success btn-lg" href="/statistics" role="button"><%=I18n.t('menu.link_statistics')%></a>
    </span>
  </form>
</div>
